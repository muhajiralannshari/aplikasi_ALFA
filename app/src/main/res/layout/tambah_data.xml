<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tambah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradien_background"
    tools:context=".TambahData">

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_corner"
        android:padding="24dp"
        android:elevation="46dp">

        <EditText
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:drawableEnd="@drawable/tanggal"
            android:focusable="false"
            android:inputType="date"
            android:hint="tanggal"
            android:onClick="showDatePickerDiaolog"
            tools:ignore="OnClick" />

        <EditText
            android:id="@+id/kandang1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:hint="telur kandang 1"
            android:inputType="number"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:id="@+id/kandang2"
            android:hint="telur kandang 2"
            android:inputType="number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:id="@+id/kandang3"
            android:hint="telur kandang 3"
            android:inputType="number" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/confirm_button"
            android:layout_margin="20dp"
            android:text="confirm"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />
    </LinearLayout>


</RelativeLayout>

